<Page x:Class="StudentIO.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentIO.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="СТУДЕНТ ИО">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="{StaticResource Grey}" BorderThickness="5">
            <ScrollViewer>
                <StackPanel>

                    <Button x:Name="btSelectionCampaign" Content="Приемные кампании" Click="btRouteList_Click"/>
                    <Button x:Name="btEnrollee" Content="Абитуриенты" Click="btRouteHistoryList_Click"/>
                    <Button x:Name="btEntranceTest" Content="Вступительные испытания" Click="btDriverList_Click"/>
                    <Button x:Name="btOrganization" Content="Организация" Click="btAutoList_Click"/>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <Frame x:Name="adminFrame" NavigationUIVisibility="Hidden" Grid.Column="1" Margin="5"/>

    </Grid>
    
</Page>
